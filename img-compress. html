    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('file-input');
            const dropZone = document.getElementById('drop-zone');
            const compressionLevel = document.getElementById('compression-level');
            const compressionValue = document.getElementById('compression-value');
            const imageQuality = document.getElementById('image-quality');
            const qualityValue = document.getElementById('quality-value');
            const compressBtn = document.getElementById('compress-btn');
            const resultContainer = document.getElementById('result-container');
            const originalImg = document.getElementById('original-img');
            const compressedImg = document.getElementById('compressed-img');
            const originalSize = document.getElementById('original-size');
            const compressedSize = document.getElementById('compressed-size');
            const savingsValue = document.getElementById('savings-value');
            const savingsPercent = document.getElementById('savings-percent');
            const downloadBtn = document.getElementById('download-btn');
            
            let originalImageFile = null;
            let compressedImageData = null;
            
            // Update slider values
            compressionLevel.addEventListener('input', function() {
                compressionValue.textContent = this.value + '%';
            });
            
            imageQuality.addEventListener('input', function() {
                qualityValue.textContent = this.value + '%';
            });
            
            // File selection via click
            dropZone.addEventListener('click', function() {
                fileInput.click();
            });
            
            // Drag and drop functionality
            dropZone.addEventListener('dragover', function(e) {
                e.preventDefault();
                this.style.background = '#e6f0ff';
                this.style.borderColor = '#2575fc';
            });
            
            dropZone.addEventListener('dragleave', function() {
                this.style.background = '';
                this.style.borderColor = '#6a11cb';
            });
            
            dropZone.addEventListener('drop', function(e) {
                e.preventDefault();
                this.style.background = '';
                this.style.borderColor = '#6a11cb';
                
                if (e.dataTransfer.files.length) {
                    handleImageFile(e.dataTransfer.files[0]);
                }
            });
            
            // File input change
            fileInput.addEventListener('change', function() {
                if (this.files.length) {
                    handleImageFile(this.files[0]);
                }
            });
            
            // Handle the image file
            function handleImageFile(file) {
                if (!file.type.match('image.*')) {
                    alert('Please select an image file.');
                    return;
                }
                
                originalImageFile = file;
                compressBtn.disabled = false;
                
                // Display original image
                const reader = new FileReader();
                reader.onload = function(e) {
                    originalImg.src = e.target.result;
                    
                    // Display original file size
                    const sizeInKB = (file.size / 1024).toFixed(2);
                    originalSize.textContent = sizeInKB + ' KB';
                };
                reader.readAsDataURL(file);
                
                // Reset result container
                resultContainer.style.display = 'none';
            }
            
            // Compress image
            compressBtn.addEventListener('click', function() {
                if (!originalImageFile) return;
                
                const compression = compressionLevel.value / 100;
                const quality = imageQuality.value / 100;
                
                // Show loading state
                compressBtn.textContent = 'Compressing...';
                compressBtn.disabled = true;
                
                // Simulate compression process (in a real app, this would use actual compression algorithms)
                setTimeout(function() {
                    const originalSizeKB = originalImageFile.size / 1024;
                    const compressionFactor = 1 - (compression * 0.6); // Simulate size reduction up to 60%
                    const compressedSizeKB = originalSizeKB * compressionFactor;
                    
                    // Display compressed image (in a real app, this would be the actual compressed image)
                    compressedImg.src = originalImg.src;
                    
                    // Update file sizes
                    compressedSize.textContent = compressedSizeKB.toFixed(2) + ' KB';
                    
                    // Calculate savings
                    const savedKB = originalSizeKB - compressedSizeKB;
                    const savedPercent = (savedKB / originalSizeKB * 100).toFixed(1);
                    
                    savingsValue.textContent = savedKB.toFixed(2) + ' KB';
                    savingsPercent.textContent = savedPercent + '%';
                    
                    // Show results
                    resultContainer.style.display = 'block';
                    
                    // Reset button
                    compressBtn.textContent = 'Compress Image';
                    compressBtn.disabled = false;
                    
                    // Scroll to results
                    resultContainer.scrollIntoView({ behavior: 'smooth' });
                }, 1500);
            });
            
            // Download compressed image
            downloadBtn.addEventListener('click', function() {
                if (!compressedImg.src) return;
                
                const link = document.createElement('a');
                link.download = 'compressed-image.jpg';
                link.href = compressedImg.src;
                link.click();
            });
        });
    </script>
